<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel="stylesheet" type="text/css" href="css/page.css" />
    <link rel="stylesheet" type="text/css" href="css/ui.css" />
    
    <title>Document</title>
    

        </head>

        <body>
        
        <ul>
          <li><a class="active" href="/start">HOME</a></li>
          <li><a href="#news">SAVE</a></li>
          <li><div class="title">INFO</div></li>
          <li style="position: absolute;  right: 0; width: 200px; text-align:right;"><a href="#about"><%= foundUser.firstName.toUpperCase() %>  <%= foundUser.secondName.toUpperCase() %></a></li>
        </ul>
      

    <h1>VISUAL NOVEL</h1>

    <div id="container">
            <div id="sceneContent">
                    <img src="data:image/<%= foundPage.photo.contentType %>;base64,
                    <%=foundPage.photo.data.toString('base64')%>">
            </div>
        <div id="placeName">
            <h3>Woods</h3>
        </div>
            <div id="choices"> 
                <div id="characterName">
                    <%= foundPage.name %> 
                </div>
                <div id="text">
                    <%= foundPage.text %> 
                </div>
                <% for(let ch in answers){ %> 
                    <div class="choice">
                        <a href="/api/home/<%= answers[ch][0].nextQuestion %> " onclick="playCl()"><%= answers[ch][0].text %> </a>
                    </div>
                 <% } %> 
            </div>
            <audio id="audioCl" src="music/knopka.mp3" volume="0.5"></audio>

	</div>
    <script>
         function playCl() {
          var audioCL = document.getElementById("audioCl");
          audioCL.volume = 0.5;
          audioCL.play();
        }


        
      </script>
    
</body>
</html>